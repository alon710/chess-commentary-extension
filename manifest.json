{
  "manifest_version": 3,
  "name": "Chess.com Annotation Reader",
  "version": "1.1.0",
  "description": "Reads chess annotations aloud on chess.com using TTS.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.chess.com/*"],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
